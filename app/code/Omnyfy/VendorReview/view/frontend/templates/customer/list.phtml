                            <a href="<?php /* @escapeNotVerified */ echo $block->getVendorLink() ?>id/<?php /* @escapeNotVerified */ echo $_review->getEntityPkValue() ?>"><?php echo $block->escapeHtml($_review->getName()) ?></a>
