<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">My Favourite Vendor</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Omnyfy\Vendor\Block\Customer\Account\FavouriteVendor" name="customer.account.my.favourite.vendor" template="Omnyfy_Vendor::customer/account/favourite_vendor.phtml">
            </block>
        </referenceContainer>
    </body>
</page>