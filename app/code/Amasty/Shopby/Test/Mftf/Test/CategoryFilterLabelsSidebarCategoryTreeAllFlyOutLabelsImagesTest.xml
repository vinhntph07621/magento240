<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="CategoryFilterLabelsSidebarCategoryTreeAllFlyOutLabelsImagesTest"
          extends="CategoryFilterLabelsSidebarCategoryTreeAllTest">

        <annotations>
            <features value="Category filter"/>
            <stories value="Category filter checking"/>
            <title value="Checking of Category filter filtering"/>
            <description
                    value="Checking of Category filter filtering on sidebar in labels mode and rendering of All Category Tree and Fly-out effect with Images and Labels"/>
            <severity value="AVERAGE"/>
            <testCaseId value="CATEGORYFILTER-59"/>
            <group value="Amasty"/>
            <group value="ILN"/>
            <group value="ILNregression"/>
            <group value="catfilter"/>
            <group value="catfiltertree"/>
        </annotations>

        <before>
            <actionGroup stepKey="ConfigureCategoryIDSCategoryTree1"
                         ref="ConfigureCategoryIDSCategoryTreeFlyOutActionGroup">
                <argument name="categoryIDS3" value="CategoryIDSCategoryTreeFlyOutImagesLabels"/>
            </actionGroup>
        </before>

        <!--Filter All-Products Page by Category Filter: select option on sidebar, check the result/-->

        <seeElement selector="{{StorefrontProductListingPageSection.CategoryOptionImage('Women','1.jpg','1_')}}"
                    stepKey="checkCategoryOptionImage1"
                    after="clickOnCategoryFilter1"/>
        <moveMouseOver selector="{{StorefrontProductListingPageSection.FilterOption('Women')}}"
                       stepKey="hoverOverOption1"
                       after="checkCategoryOptionImage1"/>
        <wait time="2" stepKey="wait1" after="hoverOverOption1"/>
        <seeElement selector="{{StorefrontProductListingPageSection.CategoryOptionImage('Women','1.jpg','1_')}}"
                    stepKey="checkCategoryOptionImage2"
                    after="clickOnCategoryFilter2"/>
        <moveMouseOver selector="{{StorefrontProductListingPageSection.FilterOption('Tops')}}"
                       stepKey="hoverOverOption3"
                       after="grabQtyOfProducts1"/>
        <click selector="{{StorefrontProductListingPageSection.FilterOption('Tops')}}"
               stepKey="clickOnOption1"/>
        <moveMouseOver selector="{{StorefrontProductListingPageSection.FilterOption('Women')}}"
                       stepKey="hoverOverOption2"
                       after="clickOnCategoryFilter2"/>
        <wait time="2" stepKey="wait2" after="hoverOverOption2"/>

    </test>
</tests>


