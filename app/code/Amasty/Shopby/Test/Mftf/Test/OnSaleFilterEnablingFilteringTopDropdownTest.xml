<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="OnSaleFilterEnablingFilteringTopDropdownTest" extends="OnSaleFilterEnablingFilteringSidebarLabelsTest">

        <annotations>
            <features value="Custom filters"/>
            <stories value="Custom filters checking"/>
            <title value="Check of on sale filter enabling and filtering"/>
            <description value="Check of on sale filter enabling and filtering on top in dropdown mode"/>
            <severity value="AVERAGE"/>
            <testCaseId value="ILNONSALEFILTER-4"/>
            <group value="Amasty"/>
            <group value="ILN"/>
            <group value="ILNregression"/>
            <group value="onsalefilter"/>
        </annotations>

        <before>
            <actionGroup stepKey="OnSaleFilterEnabling1"
                         ref="OnSaleFilterEnablingActionGroup">
                <argument name="customFilter" value="CustomFilterDropdownTop"/>
                <argument name="customFilter3" value="OnSaleFilterLabel"/>
            </actionGroup>
        </before>

        <!--Filter by On Sale Filter: select option on top in dropdown, check the result, remove selected option from state/-->

        <click selector="{{StorefrontProductListingPageSection.FilterInDropdown('am_on_sale')}}"
               stepKey="clickOnFilterDropdown1"
               after="clickOnSaleFilter1"/>
        <click selector="{{StorefrontProductListingPageSection.FilterOptionInDropdown('On Sale','2')}}"
               stepKey="clickOnSaleOption1"/>

    </test>
</tests>


