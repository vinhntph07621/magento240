<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="CCBCategoryNameWithoutImagesOnDifferentCategoriesOnCustomPageTest"
          extends="CCBCategoryNameWithoutImagesDisplayModeTest">

        <annotations>
            <features value="Children Categories Block"/>
            <stories value="Children Categories Block checking"/>
            <title value="Check Children Categories Block"/>
            <description value="Check of Children Categories Without Image on specified Categories in interaction with Custom Page"/>
            <severity value="MINOR"/>
            <testCaseId value="CHILDCATBLOCK-8"/>
            <group value="Amasty"/>
            <group value="ILN"/>
            <group value="ILNregression"/>
            <group value="childcatblock"/>
        </annotations>

        <before>
            <actionGroup stepKey="ConfigureCategoryThumbImg"
                         ref="ConfigureCategoryNamesWithoutImgWithoutSliderActionGroup">
                <argument name="ChildrenCategories1" value="CategoryNamesWithoutImagesDifferentCategories"/>
            </actionGroup>
            <actionGroup stepKey="CustomPageEnabling1" ref="CustomPageConfigurationActionGroup">
                <argument name="customPage" value="customPageConfigurationOnMenTops"/>
                <argument name="customPage2" value="customPageTriggerScenario1"/>
            </actionGroup>
        </before>

        <after>
            <actionGroup ref="DeleteCustomPageActionGroup" stepKey="deleteCustomPage1" before="DisableChildrenCategories"/>
        </after>


        <!-- Check Category Names without Images display mode on specified Categories in interaction with Custom Page/-->

        <click selector="{{StorefrontProductListingPageSection.Filter('Color')}}"
               stepKey="clickColorFilter1"
               after="OpenMenTopsCategoryPage1"/>
        <click selector="{{StorefrontProductListingPageSection.FilterOption('Black')}}"
               stepKey="clickBlackOption1"
               after="clickColorFilter1"/>
        <see selector="{{StorefrontProductListingPageSection.PageTitle}}"
             userInput="Test Custom Page Title"
             stepKey="checkPageTitle1"
             after="clickBlackOption1"/>
        <amOnPage url="{{CategoryPage.url('men','bottoms-men')}}" stepKey="OpenMenBottomsCategoryPage1"/>
        <waitForPageLoad stepKey="waitForPageLoad2"/>
        <click selector="{{StorefrontProductListingPageSection.Filter('Color')}}"
               stepKey="clickColorFilter2"/>
        <click selector="{{StorefrontProductListingPageSection.FilterOption('Black')}}"
               stepKey="clickBlackOption2"/>
        <dontSee selector="{{StorefrontProductListingPageSection.PageTitle}}"
             userInput="Test Custom Page Title"
             stepKey="checkPageTitle2"/>
        <dontSeeElement
                selector="{{StorefrontProductListingPageSection.ChildrenCategoryWithImages('100','100','placeholder.jpg','placeholder.jpg')}}"
                stepKey="CheckCCBElements3"/>
        <dontSeeElement selector="{{StorefrontProductListingPageSection.ChildrenCategoryWithoutIMGorLabel}}"
                        stepKey="CheckCCBElements4"/>

    </test>
</tests>


