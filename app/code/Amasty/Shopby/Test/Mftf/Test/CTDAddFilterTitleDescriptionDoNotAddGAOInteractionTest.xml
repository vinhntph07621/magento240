<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="CTDAddFilterTitleDescriptionDoNotAddGAOInteractionTest"
          extends="CTDAddFilterTitleDescriptionAfterGAOInteractionTest">

        <annotations>
            <features value="Category Title and Description"/>
            <stories value="Category Title and Description checking"/>
            <title value="Check Category Title and Description"/>
            <description
                    value="Check of Category Title and Description position after filtering in case of Do Not Add Category Name/Description in interaction with Group Attribute Option"/>
            <severity value="MINOR"/>
            <testCaseId value="CTD-20"/>
            <group value="Amasty"/>
            <group value="ILN"/>
            <group value="ILNregression"/>
            <group value="cattitledesc"/>
        </annotations>

        <before>
            <actionGroup stepKey="SetTitleAndDescription1"
                         ref="ConfigureCategoryTitleAndDescriptionActionGroup">
                <argument name="CatTitleAndDescriptILNSettings" value="FilterTitleDescriptionDoNotAdd"/>
            </actionGroup>
        </before>

        <!-- Check Category Title: filter page by Group Attribute Option, check that Category Title consists of  Group Attribute Option Title and Category Title/-->

        <see selector="{{StorefrontProductListingPageSection.PageTitle}}"
             userInput="Default Category"
             stepKey="checkPageTitle1"/>
        <seeInSource html="&lt;title&gt;Default Category&lt;&#x0002F;title&gt;"
                     stepKey="seeInSourcePageTitle1"/>

    </test>
</tests>


