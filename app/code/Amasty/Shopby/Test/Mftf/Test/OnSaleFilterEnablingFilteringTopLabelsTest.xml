<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="OnSaleFilterEnablingFilteringTopLabelsTest" extends="OnSaleFilterEnablingFilteringSidebarLabelsTest">

        <annotations>
            <features value="Custom filters"/>
            <stories value="Custom filters checking"/>
            <title value="Check of on sale filter enabling and filtering"/>
            <description value="Check of on sale filter enabling and filtering on top in labels mode"/>
            <severity value="AVERAGE"/>
            <testCaseId value="ILNONSALEFILTER-3"/>
            <group value="Amasty"/>
            <group value="ILN"/>
            <group value="ILNregression"/>
            <group value="onsalefilter"/>
        </annotations>

        <before>
            <actionGroup stepKey="OnSaleFilterEnabling1"
                         ref="OnSaleFilterEnablingActionGroup">
                <argument name="customFilter" value="CustomFilterLabelsTop"/>
                <argument name="customFilter3" value="OnSaleFilterLabel"/>
            </actionGroup>
        </before>

        <!--Filter by On Sale Filter: select option on top, check the result, remove selected option from state/-->

    </test>
</tests>


