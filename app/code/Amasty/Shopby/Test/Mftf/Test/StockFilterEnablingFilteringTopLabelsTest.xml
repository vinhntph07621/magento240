    <test name="StockFilterEnablingFilteringTopLabelsTest" extends="StockFilterEnablingFilteringSidebarLabelsTest">

        <annotations>
            <features value="Custom filters"/>
            <stories value="Custom filters checking"/>
            <title value="Check of stock filter enabling and filtering"/>
            <description value="Check of stock filter enabling and filtering on top in labels display mode"/>
            <severity value="AVERAGE"/>
            <testCaseId value="ILNSTOCKFILTER-3"/>
            <group value="Amasty"/>
            <group value="ILN"/>
            <group value="ILNregression"/>
            <group value="stockfilter"/>
        </annotations>

        <before>
            <actionGroup stepKey="StockFilterEnabling1"
                         ref="StockFilterEnablingActionGroup">
                <argument name="customFilter" value="CustomFilterLabelsTop"/>
                <argument name="customFilter3" value="StockFilterLabel"/>
            </actionGroup>
        </before>

        <!--Filter by Stock Filter: expand filter, select Out of Stock option on top in labels, check the result, remove selected option from state/-->

        <!--Filter by Stock Filter: expand filter, select In Stock option  on top in labels, check the result, remove selected option from state/-->

