<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="AllBrandsPageWidgetInsertInWidgetOnCMSPageTest" extends="AllBrandsPageWidgetInsertInCMSPageTest">

        <annotations>
            <features value="Brand Attribute"/>
            <stories value="All Brands Page elements checking"/>
            <title value="Check of All Brands Page elements"/>
            <description
                    value="Check that All Brands Page Widget is inserted in Widget on CMS Page Content"/>
            <severity value="AVERAGE"/>
            <testCaseId value="BRANDATTR-33"/>
            <group value="Amasty"/>
            <group value="ILN"/>
            <group value="ILNregression"/>
            <group value="brandattribute"/>
            <group value="allbrandspage"/>
        </annotations>

        <before>
            <actionGroup ref="CreateCMSPageWithAllBrandsPageWidgetCodeWidgetActionGroup"
                         stepKey="CreateCMSPageWithWidgetCode1">
                <argument name="widgetCode" value="allBrandsPageWidgetCode"/>
            </actionGroup>
        </before>

        <!--Check that All Brands Page Block from All Brands Page Widget is displayed on CMS Page-->

    </test>
</tests>