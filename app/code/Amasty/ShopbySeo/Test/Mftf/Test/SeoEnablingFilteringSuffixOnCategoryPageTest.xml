<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="SeoEnablingFilteringSuffixOnCategoryPageTest" extends="SeoEnablingFilteringFullSeoOnCategoryPageTest">

        <annotations>
            <features value="SEO settigs"/>
            <stories value="SEO settigs checking"/>
            <title value="Check of url configuration after filtering"/>
            <description
                    value="Check of url configuration after filtering with enabled SEO and suffix with seo-friendly brand attribute and brand url key"/>
            <severity value="AVERAGE"/>
            <testCaseId value="SEOSETTINGS-20"/>
            <group value="Amasty"/>
            <group value="ILN"/>
            <group value="ILNregression"/>
            <group value="seourls"/>
            <group value="seosuffix"/>
        </annotations>

        <before>
            <actionGroup stepKey="SeoEnabling1" ref="SeoSettingsConfigurationActionGroup">
                <argument name="seoScenario2" value="enableSeoSuffix"/>
                <argument name="seoScenario" value="enableSeoDisableSuffix"/>
            </actionGroup>
        </before>

        <!--Check SEO settings: filter page by seo-friendly and non seo-friendly filters with enabled seo and suffix with seo-friendly brand attribute and brand url key, check the result in url/-->

        <seeInCurrentUrl url="/solid--polyester--all_weather--indoor.html?style_general=134%2C125"
                         stepKey="seeInCurrentUrl1"/>
        <dontSeeInCurrentUrl url="testfilterkey" stepKey="dontSeeInCurrentUrl3"/>

    </test>
</tests>


