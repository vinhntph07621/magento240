<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="NoindexForPaginatedPagesSettingOnSRPTest" extends="NoindexForPaginatedPagesSettingTest">

        <annotations>
            <features value="Robots Tag Control settings"/>
            <stories value="Robots Tag Control settings checking"/>
            <title value="Check Robots Tag Control settings configuration before/after filtering"/>
            <description value="Check of Noindex for paginated pages setting enabling on Search Result Page"/>
            <severity value="AVERAGE"/>
            <testCaseId value="RTCSETTINGS-47"/>
            <group value="Amasty"/>
            <group value="ILN"/>
            <group value="ILNregression"/>
            <group value="rtcsettings"/>
            <group value="noindexpagination"/>
        </annotations>

        <!--Check RTC settings: navigate to Search Result Page, check Nofollow in Page Source after pagination/-->

        <amOnPage url="{{SearchResultPage.url('red')}}" stepKey="navigateToAllProducts1"/>
        <seeOptionIsSelected userInput="relevance"
                             selector="{{StorefrontCategoryTopToolbarSection.sortByDropdown}}"
                             stepKey="checkDefaultSorting1"
                             after="navigateToAllProducts1"/>
        <seeInPageSource
                html="&quot;noindex,FOLLOW"
                stepKey="seeInSource1"/>
        <seeInPageSource
                html="&quot;noindex,FOLLOW"
                stepKey="seeInSource2"/>

    </test>
</tests>
