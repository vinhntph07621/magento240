<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="CanonicalCatPagesCurrentURLWithoutGetParamNoindexPaginationTest"
          extends="CanonicalCatPagesBrandFilterOnlyNoindexPaginationTest">

        <annotations>
            <features value="Canonical URL settings"/>
            <stories value="Canonical URL settings checking"/>
            <title value="Check Canonical URL settings configuration before/after filtering"/>
            <description
                    value="Check of Current URL without Get parameters setting configuration on the storefront for Category Pages with Noindex for Paginated Pages"/>
            <severity value="AVERAGE"/>
            <testCaseId value="CANONICALSETTINGS-75"/>
            <group value="Amasty"/>
            <group value="ILN"/>
            <group value="ILNregression"/>
            <group value="canonicalsettings"/>
            <group value="catpagescanonical"/>
        </annotations>

        <before>
            <actionGroup stepKey="ConfigureCanonicalURL1" ref="CanonicalURLConfigurationActionGroup">
                <argument name="canonicalscenario2" value="catPageCanonCurrentURLWithoutGetParam"/>
                <argument name="canonicalscenario" value="enableCanonical"/>
            </actionGroup>
        </before>

        <!--Check Canonical URL settings: navigate to Category Page, check Canonical URL in Page Source, filter Page, check Canonical URL/-->

        <seeInSource
                html="/men/tops-men/testfilterkey/pattern-solid-material-polyester-coconar-performance-fabric-climate-all-weather-indoor.html&quot;&gt;"
                stepKey="seeInSource4"/>
        <dontSeeInSource
                html="/men/tops-men/testfilterkey/pattern-solid-material-polyester-coconar-performance-fabric-climate-all-weather-indoor.html?p=2&quot;&gt;"
                stepKey="dontSeeInSource6"/>

    </test>
</tests>
