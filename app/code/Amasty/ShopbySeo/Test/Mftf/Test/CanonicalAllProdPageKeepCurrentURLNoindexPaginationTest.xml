<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="CanonicalAllProdPageKeepCurrentURLNoindexPaginationTest"
          extends="CanonicalAllProdPageURLKeyOnlyNoindexPaginationTest">

        <annotations>
            <features value="Canonical URL settings"/>
            <stories value="Canonical URL settings checking"/>
            <title value="Check Canonical URL settings configuration before/after filtering"/>
            <description
                    value="Check of Keep current URL setting configuration on the storefront for All-products Page with Noindex for Paginated Pages"/>
            <severity value="AVERAGE"/>
            <testCaseId value="CANONICALSETTINGS-97"/>
            <group value="Amasty"/>
            <group value="ILN"/>
            <group value="ILNregression"/>
            <group value="canonicalsettings"/>
            <group value="allprodpagecanonical"/>
        </annotations>

        <before>
            <actionGroup stepKey="ConfigureCanonicalURL1" ref="CanonicalURLConfigurationActionGroup">
                <argument name="canonicalscenario2" value="allProdPageCanonKeepCurrentURL"/>
                <argument name="canonicalscenario" value="enableCanonical"/>
            </actionGroup>
        </before>

        <!--Check Canonical URL settings: navigate to All-products Page, check Canonical URL in Page Source, filter Page, check Canonical URL, activate pagination, check Canonical URL/-->

        <seeInSource
                html="/testfilterkey/pattern-solid-climate-all-weather-indoor.html?style_general=134%2C125&quot;&gt;"
                stepKey="seeInSource4"/>
        <dontSeeInSource
                html="/testfilterkey/pattern-solid-climate-all-weather-indoor.html?p=2&amp;style_general=134%2C125&quot;&gt;"
                stepKey="dontSeeInSource2"/>

    </test>
</tests>
