<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="SeoEnablingFilteringAttributeNameScenario2OnCategoryNameTest"
          extends="SeoEnablingFilteringFullSeoOnCategoryPageTest">

        <annotations>
            <features value="SEO settigs"/>
            <stories value="SEO settigs checking"/>
            <title value="Check of url configuration after filtering"/>
            <description
                    value="Check of url configuration after filtering with enabled SEO and attribute name in scenario 2, seo-friendly brand attribute with no brand url key"/>
            <severity value="AVERAGE"/>
            <testCaseId value="SEOSETTINGS-19"/>
            <group value="Amasty"/>
            <group value="ILN"/>
            <group value="ILNregression"/>
            <group value="seourls"/>
            <group value="seoattributename"/>
        </annotations>

        <before>
            <actionGroup stepKey="SeoEnabling1" ref="SeoSettingsConfigurationActionGroup">
                <argument name="seoScenario2" value="enableSeoAttrName2"/>
                <argument name="seoScenario" value="enableSeoDisableSuffix"/>
            </actionGroup>
            <actionGroup ref="BrandAttributeConfigurationActionGroup" stepKey="configureBrandAttribute1">
                <argument name="brandAttribute" value="materialAsBrandAttribute"/>
            </actionGroup>
        </before>

        <after>
            <actionGroup ref="BrandAttributeConfigurationActionGroup" stepKey="configureBrandAttribute2"
                         before="logout">
                <argument name="brandAttribute" value="noBrandAttribute"/>
            </actionGroup>
        </after>

        <!--Check SEO settings: filter page by seo-friendly and non seo-friendly filters with enabled seo and attribute name in scenario 2, seo-friendly brand attribute with no brand url key, check the result in url/-->

        <seeInCurrentUrl
                url="/pattern--solid--material--polyester--climate--all-weather--indoor.html?style_general=134%2C125"
                stepKey="seeInCurrentUrl1"/>
        <dontSeeInCurrentUrl url="testfilterkey" stepKey="dontSeeInCurrentUrl3"/>
        <dontSeeInCurrentUrl url="testbrandurlkey" stepKey="dontSeeInCurrentUrl4"/>

    </test>
</tests>


