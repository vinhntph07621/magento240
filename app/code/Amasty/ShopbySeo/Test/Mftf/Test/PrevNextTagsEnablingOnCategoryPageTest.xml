<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="PrevNextTagsEnablingOnCategoryPageTest" extends="PrevNextTagsEnablingTest">

        <annotations>
            <features value="Pagination settings"/>
            <stories value="Pagination settings checking"/>
            <title value="Check Pagination settings configuration in different circumstances"/>
            <description value="Check of Use Prev/Next Tags for Improved Navigation Pages setting enabling on Category Page"/>
            <severity value="AVERAGE"/>
            <testCaseId value="PNTSETTINGS-2"/>
            <group value="Amasty"/>
            <group value="ILN"/>
            <group value="ILNregression"/>
            <group value="pntsettings"/>
            <group value="pntags"/>
        </annotations>

        <!--Check Prev/Next Tags settings: navigate to Category Page, check Prev/Next Tags in Page Source, activate pagination, check Prev/Next Tags in Page Source/-->

        <amOnPage url="{{CategoryPage.url('men','tops-men')}}" stepKey="navigateToAllProducts1"/>

    </test>
