<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="SeoEnablingFilteringFullSeoScenario2RedirectAliasTest" extends="SeoEnablingFilteringFullSeoRedirectAliasTest">

        <annotations>
            <features value="SEO settigs"/>
            <stories value="SEO settigs checking"/>
            <title value="Check of url configuration after filtering"/>
            <description
                    value="Check that url configuration is correct after filtering with enabled full SEO settings in scenario 2 (redirect from All-products to Brand Page) and defined Brand url Alias"/>
            <severity value="AVERAGE"/>
            <testCaseId value="SEOSETTINGS-83"/>
            <group value="Amasty"/>
            <group value="ILN"/>
            <group value="ILNregression"/>
            <group value="seourls"/>
            <group value="fullseo"/>
        </annotations>

        <before>
             <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup stepKey="SeoEnabling1" ref="SeoSettingsConfigurationActionGroup">
                <argument name="seoScenario2" value="enableFullSeo2"/>
                <argument name="seoScenario" value="enableSeoDisableSuffix"/>
            </actionGroup>
        </before>

        <!--Check SEO settings: filter page by seo-friendly and non seo-friendly filters with full seo in scenario 2 (redirect from All-products to Brand Page), check the result in url/-->

        <seeInCurrentUrl
                url="/testbrandurlkey/polyestertstalias/testfilterkey/pattern_solid_climate_all_weather_indoor.html?style_general=134%2C125"
                stepKey="seeInCurrentUrl1"/>

    </test>
</tests>


