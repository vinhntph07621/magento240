<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="SeoEnablingFilteringFilterKeyScenario2Redirect2AliasTest"
          extends="SeoEnablingFilteringFullSeoRedirect2AliasTest">

        <annotations>
            <features value="SEO settigs"/>
            <stories value="SEO settigs checking"/>
            <title value="Check of url configuration after filtering"/>
            <description
                    value="Check of url configuration after filtering with enabled SEO and filter key in scenario 2 (redirect2 from All-products to Brand Page) and defined Brand url Alias"/>
            <severity value="MINOR"/>
            <testCaseId value="SEOSETTINGS-100"/>
            <group value="Amasty"/>
            <group value="ILN"/>
            <group value="ILNregression"/>
            <group value="seourls"/>
            <group value="seofilterkey"/>
        </annotations>

        <before>
             <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup stepKey="SeoEnabling1" ref="SeoSettingsConfigurationActionGroup">
                <argument name="seoScenario2" value="enableSeoFilterKey2"/>
                <argument name="seoScenario" value="enableSeoDisableSuffix"/>
            </actionGroup>
            <actionGroup ref="BrandAttributeConfigurationActionGroup" stepKey="configureBrandAttribute1">
                <argument name="brandAttribute" value="materialAsBrandAttribute"/>
            </actionGroup>
        </before>

        <!--Check SEO settings: filter page by seo-friendly and non seo-friendly filters with enabled seo and filter key in scenario 2 (redirect2 from All-products to Brand Page), check the result in url/-->

        <seeInCurrentUrl
                url="/polyestertstalias/testfilterkey/solid-all_weather-indoor?style_general=134%2C125"
                stepKey="seeInCurrentUrl1"/>
        <dontSeeInCurrentUrl url=".html" stepKey="dontSeeInCurrentUrl2"/>
        <dontSeeInCurrentUrl url="testbrandurlkey" stepKey="dontSeeInCurrentUrl4"/>

    </test>
</tests>


