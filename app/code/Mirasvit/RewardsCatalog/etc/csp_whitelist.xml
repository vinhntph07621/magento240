<?xml version="1.0" encoding="UTF-8"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="img-src">
            <values>
                <value id="mst.facebook" type="host">www.facebook.com</value>
                <value id="mst.pinterest" type="host">pinterest.com</value>
                <value id="mst.assets.pinterest" type="host">assets.pinterest.com</value>
                <value id="mst.syndication.twitter" type="host">syndication.twitter.com</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="mst.facebook" type="host">connect.facebook.net</value>
                <value id="mst.twitter" type="host">twitter.com</value>
                <value id="mst.platform.twitter" type="host">platform.twitter.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="mst.facebook" type="host">www.facebook.com</value>
                <value id="mst.platform.twitter" type="host">platform.twitter.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
